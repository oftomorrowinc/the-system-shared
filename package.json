{
  "name": "the-system-shared",
  "version": "1.3.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oftomorrowinc/the-system-shared.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.json --watch",
    "release": "npm run build && git add . && git commit -m \"Release v1.3.2\" && git tag -a v1.3.2 -m \"Release v1.3.2\" && git push && git push --tags",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "lint": "eslint --ext .ts,.tsx .",
    "tscheck": "tsc --noEmit",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "example:api-streaming": "node examples/api-streaming-example.js",
    "example:api-streaming-with-steps": "node examples/api-streaming-example-with-steps.js",
    "example:api-non-streaming-with-steps": "node examples/api-non-streaming-example-with-steps.js",
    "example:api-non-streaming": "node examples/api-non-streaming-example.js",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "lucide-react": "^0.487.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "typescript-eslint": "^8.32.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
